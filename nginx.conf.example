# ================================================
# HYLIYA - Nginx Configuration Template
# Dành cho CyberPanel với Nginx
# ================================================
# 
# HƯỚNG DẪN:
# 1. Thêm config này vào file cấu hình Nginx của domain
# 2. Thường ở: /etc/nginx/sites-available/hyliya.com
# 3. Hoặc thêm vào phần server block trong CyberPanel
# ================================================

server {
    listen 80;
    listen [::]:80;
    server_name hyliya.com www.hyliya.com;
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name hyliya.com www.hyliya.com;
    
    # SSL Certificate (Let's Encrypt via CyberPanel)
    ssl_certificate /etc/letsencrypt/live/hyliya.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/hyliya.com/privkey.pem;
    
    # SSL Configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    
    # Root directory
    root /home/hyliya.com/public_html;
    index index.html;
    
    # Logs
    access_log /home/hyliya.com/logs/access.log;
    error_log /home/hyliya.com/logs/error.log;
    
    # ================================================
    # SECURITY HEADERS
    # ================================================
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(self), microphone=(), camera=()" always;
    
    # ================================================
    # GZIP COMPRESSION
    # ================================================
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/javascript
        application/x-javascript
        application/xml+rss
        application/json
        image/svg+xml;
    
    # ================================================
    # STATIC FILES CACHING
    # ================================================
    
    # Cache images for 1 year
    location ~* \.(jpg|jpeg|png|gif|svg|webp|ico)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # Cache CSS and JS for 1 month
    location ~* \.(css|js)$ {
        expires 1M;
        add_header Cache-Control "public";
    }
    
    # Cache fonts for 1 year
    location ~* \.(woff|woff2|ttf|otf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # ================================================
    # REACT ROUTER - SPA CONFIGURATION
    # ================================================
    location / {
        try_files $uri $uri/ /index.html;
        
        # Don't cache HTML
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }
    
    # ================================================
    # ROBOTS.TXT & SITEMAP
    # ================================================
    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }
    
    location = /sitemap.xml {
        allow all;
        log_not_found off;
        access_log off;
    }
    
    # ================================================
    # FAVICON
    # ================================================
    location = /favicon.ico {
        log_not_found off;
        access_log off;
        expires 1y;
    }
    
    # ================================================
    # DENY ACCESS TO HIDDEN FILES
    # ================================================
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # ================================================
    # FILE SIZE LIMITS
    # ================================================
    client_max_body_size 50M;
}

